<!DOCTYPE html>
<html>
    <head>
        <%- include("./partials/header.ejs") %>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    </head>
    <body>
        <form method="post" action="/new">
            <div class="mt-3 container title">
                <label for="title" class="form-label">Title</label>
                <input class="form-control" type="text" name="title" id="title" placeholder="Title" />
            </div>
            <div class="container author">
                <label for="author" class="form-label">Author</label>
                <input class="form-control" type="text" name="author" id="author" placeholder="Author" />
            </div>
            <div class="container description">
                <label for="description" class="form-label">Description</label>
                <input class="form-control" type="text" name="description" id="description" placeholder="Description" />
            </div>
            <div class="container content">
                <label for="content" class="form-label">Content</label>
                <textarea class="form-control" rows=30 style="resize: none" name="content" id="content" placeholder="Content"></textarea>
            </div>
            <div class="mt-3 container password">
                <label for="password" class="form-label">Password</label>
                <input class="form-control" type="password" name="password" id="password" placeholder="Password" />
            </div>
            <div class="m-3 content" style="text-align:center">
                <input class="btn btn-primary" type="submit" value="Submit">
            </div>
        </form>
    </body>
</html>
